{
  "compilerOptions": {
    /* Language & Module */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],

    /* Paths */
    "rootDir": "src",
    "outDir": "out",

    /* VS Code extension requirements */
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* Type safety */
    "strict": true,
    "skipLibCheck": true,

    /* Output quality */
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "media"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out"
  ]
}
